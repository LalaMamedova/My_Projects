@using Newtonsoft.Json
@using TestsLib.Models.UserModels
@model RequestUser

<div class="auto-div d-block col-3">
    <form method="post" asp-action="SignInAction">

        <input asp-for="Email" type="email" name="email" placeholder="Email" />
        <span class="text-danger" asp-validation-for="Email"></span>

        <input asp-for="Password" type="password" name="password" placeholder="Password" />
        <span class="text-danger" asp-validation-for="Password"></span>

        <button type="submit" style="width: 150px; margin-left: 80px"
                class="signinSubmit"> Submit
        </button>
    </form>
</div>

